<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="744" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="347" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Background="Aquamarine" x:Name="DrinkMenu_StackPanel">
            <!-- 紅茶 -->
            <StackPanel Height="38" Background="Beige" Margin="5,5,5,0" Orientation="Horizontal">
                <CheckBox Width="18" Margin="20,2,0,2" VerticalAlignment="Center"/>
                <Label Content="紅茶" Width="100" Margin="50,2,0,2" Height="30"/>
                <Label Content="40元" Width="100" Margin="50,2,0,2" Height="30" Foreground="Red"/>
                <Slider Maximum="20" x:Name="slider1" Width="216" IsSnapToTickEnabled="True" TickPlacement="Both" ValueChanged="slider_ValueChanged"/>
                <Label Content="{Binding Value, ElementName=slider1}" Margin="20,0,0,0" Foreground="Blue"/>
            </StackPanel>

            <!-- 綠茶 -->
            <StackPanel Height="38" Background="#FFF5CF98" Margin="5,5,5,0" Orientation="Horizontal">
                <CheckBox Width="18" Margin="20,2,0,2" VerticalAlignment="Center"/>
                <Label Content="綠茶" Width="100" Margin="50,2,0,2" Height="30"/>
                <Label Content="60元" Width="100" Margin="50,2,0,2" Height="30" Foreground="Red"/>
                <Slider Maximum="20" x:Name="slider2" Width="216" IsSnapToTickEnabled="True" ValueChanged="slider_ValueChanged"/>
                <Label Content="{Binding Value, ElementName=slider2}" Margin="20,0,0,0" Foreground="Blue"/>
            </StackPanel>

            <!-- 可樂 -->
            <StackPanel Height="38" Background="Beige" Margin="5,5,5,0" Orientation="Horizontal">
                <CheckBox Width="18" Margin="20,2,0,2" VerticalAlignment="Center"/>
                <Label Content="可樂" Width="100" Margin="50,2,0,2" Height="30"/>
                <Label Content="85元" Width="100" Margin="50,2,0,2" Height="30" Foreground="Red"/>
                <Slider Maximum="20" x:Name="slider3" Width="216" IsSnapToTickEnabled="True" ValueChanged="slider_ValueChanged"/>
                <Label Content="{Binding Value, ElementName=slider3}" Margin="20,0,0,0" Foreground="Blue"/>
            </StackPanel>

            <!-- 紅牛 -->
            <StackPanel Height="38" Background="#FFF5CF98" Margin="5,5,5,0" Orientation="Horizontal">
                <CheckBox Width="18" Margin="20,2,0,2" VerticalAlignment="Center"/>
                <Label Content="紅牛" Width="100" Margin="50,2,0,2" Height="30"/>
                <Label Content="95元" Width="100" Margin="50,2,0,2" Height="30" Foreground="Red"/>
                <Slider Maximum="20" x:Name="slider4" Width="216" IsSnapToTickEnabled="True" ValueChanged="slider_ValueChanged"/>
                <Label Content="{Binding Value, ElementName=slider4}" Margin="20,0,0,0" Foreground="Blue"/>
            </StackPanel>

            <!-- 魔爪 -->
            <StackPanel Height="38" Background="Beige" Margin="5,5,5,0" Orientation="Horizontal">
                <CheckBox Width="18" Margin="20,2,0,2" VerticalAlignment="Center"/>
                <Label Content="魔爪" Width="100" Margin="50,2,0,2" Height="30"/>
                <Label Content="110元" Width="100" Margin="50,2,0,2" Height="30" Foreground="Red"/>
                <Slider Maximum="20" x:Name="slider5" Width="216" IsSnapToTickEnabled="True" ValueChanged="slider_ValueChanged"/>
                <Label Content="{Binding Value, ElementName=slider5}" Margin="20,0,0,0" Foreground="Blue"/>
            </StackPanel>

            <!-- PRIME -->
            <StackPanel Height="38" Background="#FFF5CF98" Margin="5,5,5,0" Orientation="Horizontal">
                <CheckBox Width="18" Margin="20,2,0,2" VerticalAlignment="Center"/>
                <Label Content="PRIME" Width="100" Margin="50,2,0,2" Height="30"/>
                <Label Content="150元" Width="100" Margin="50,2,0,2" Height="30" Foreground="Red"/>
                <Slider Maximum="20" x:Name="slider6" Width="216" IsSnapToTickEnabled="True" ValueChanged="slider_ValueChanged"/>
                <Label Content="{Binding Value, ElementName=slider6}" Margin="20,0,0,0" Foreground="Blue"/>
            </StackPanel>
        </StackPanel>

        <Button Grid.Column="1" x:Name="OrderBtn" Content="訂購" Margin="24,149,36,0" Height="38" Width="100" VerticalAlignment="Top" Click="OrderBtn_Click"/>
        <TextBlock Margin="0,275,0,1" x:Name="finalOrder" TextWrapping="Wrap" FontSize="16" Background="#FF1A5F07" Foreground="White" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <TextBlock Text="請選擇用餐方式：" FontWeight="Bold" Margin="33,36,31,284" Grid.Column="1"/>
        <RadioButton x:Name="DineInRadio" Content="內用" Margin="11,76,92,234" GroupName="DiningOption" Grid.Column="1"/>
        <RadioButton x:Name="TakeOutRadio" Content="外帶" GroupName="DiningOption" Grid.Column="1" Margin="87,76,16,234"/>
    </Grid>
</Window>
