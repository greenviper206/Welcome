<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="744" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="347" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Background="Aquamarine">
            <StackPanel Height="38" Background="Beige" Margin="5, 5, 5, 0" Orientation="Horizontal">
                <Label Content="紅茶" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30"/>
                <Label Content="40元" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30" Foreground="Red"/>
                <Slider Maximum="20" x:Name="slider1" VerticalAlignment="Center" Width="216" FontSize="14" IsSnapToTickEnabled="True" TickPlacement="Both" ValueChanged="slider_ValueChanged"/>
                <Label Content="{Binding Value, ElementName=slider1}" VerticalAlignment="Center" FontWeight="Bold" FontSize="14" Margin="20, 0, 0, 0" Foreground="Blue" />
            </StackPanel>

            <StackPanel Height="38" Background="#FFF5CF98" Margin="5, 5, 5, 0" Orientation="Horizontal">
                <Label Content="綠茶" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30"/>
                <Label Content="60元" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30" Foreground="Red"/>
                <Slider Maximum="20" x:Name="slider2" VerticalAlignment="Center" Width="216" FontSize="14" IsSnapToTickEnabled="True" ValueChanged="slider_ValueChanged"/>
                <Label Content="{Binding Value, ElementName=slider2}" VerticalAlignment="Center" FontWeight="Bold" FontSize="14" Margin="20, 0, 0, 0" Foreground="Blue"/>
            </StackPanel>

            <StackPanel Height="38" Background="Beige" Margin="5, 5, 5, 0" Orientation="Horizontal">
                <Label Content="可樂" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30"/>
                <Label Content="85元" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30" Foreground="Red"/>
                <Slider Maximum="20" x:Name="slider3" VerticalAlignment="Center" Width="216" FontSize="14" IsSnapToTickEnabled="True" ValueChanged="slider_ValueChanged"/>
                <Label Content="{Binding Value, ElementName=slider3}" VerticalAlignment="Center" FontWeight="Bold" FontSize="14" Margin="20, 0, 0, 0" Foreground="Blue"/>
            </StackPanel>

            <StackPanel Height="38" Background="#FFF5CF98" Margin="5, 5, 5, 0" Orientation="Horizontal">
                <Label Content="紅牛" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30"/>
                <Label Content="95元" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30" Foreground="Red"/>
                <Slider Maximum="20" x:Name="slider4" VerticalAlignment="Center" Width="216" FontSize="14" IsSnapToTickEnabled="True" ValueChanged="slider_ValueChanged"/>
                <Label Content="{Binding Value, ElementName=slider4}" VerticalAlignment="Center" FontWeight="Bold" FontSize="14" Margin="20, 0, 0, 0" Foreground="Blue"/>
            </StackPanel>

            <StackPanel Height="38" Background="Beige" Margin="5, 5, 5, 0" Orientation="Horizontal">
                <Label Content="魔爪" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30"/>
                <Label Content="110元" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30" Foreground="Red"/>
                <Slider Maximum="20" x:Name="slider5" VerticalAlignment="Center" Width="216" FontSize="14" IsSnapToTickEnabled="True" ValueChanged="slider_ValueChanged"/>
                <Label Content="{Binding Value, ElementName=slider5}" VerticalAlignment="Center" FontWeight="Bold" FontSize="14" Margin="20, 0, 0, 0" Foreground="Blue"/>
            </StackPanel>

            <StackPanel Height="38" Background="#FFF5CF98" Margin="5, 5, 5, 0" Orientation="Horizontal">
                <Label Content="PRIME" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30"/>
                <Label Content="150元" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30" Foreground="Red"/>
                <Slider Maximum="20" x:Name="slider6" VerticalAlignment="Center" Width="216" FontSize="14" IsSnapToTickEnabled="True" ValueChanged="slider_ValueChanged"/>
                <Label Content="{Binding Value, ElementName=slider6}" VerticalAlignment="Center" FontWeight="Bold" FontSize="14" Margin="20, 0, 0, 0" Foreground="Blue"/>
            </StackPanel>
        </StackPanel>

        <Button Grid.Column="1" x:Name="OrderBtn" Content="訂購" Margin="24,149,36,0" Height="38" Width="100" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="16" Click="OrderBtn_Click"/>
        <StackPanel Orientation="Horizontal" Margin="10,20,10,10"/>
        <TextBlock Margin="0,275,0,1" x:Name="finalOrder" TextWrapping="Wrap" Text="TextBox" FontSize="16" Background="#FF1A5F07" Foreground="White" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <TextBlock Text="請選擇用餐方式：" FontWeight="Bold" Margin="33,36,31,284" Grid.Column="1"/>
        <RadioButton x:Name="DineInRadio" Content="內用" Margin="11,76,92,234" GroupName="DiningOption" Grid.Column="1"/>
        <RadioButton x:Name="TakeOutRadio" Content="外帶" GroupName="DiningOption" Grid.Column="1" Margin="87,76,16,234"/>
    </Grid>
</Window>
