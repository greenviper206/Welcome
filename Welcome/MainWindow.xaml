<Window x:Class="Welcome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Welcome"
        mc:Ignorable="d"
        Title="MainWindow" Height="549" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="345"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- 背景 -->
        <Border Grid.Row="0" Grid.Column="0" Background="#1F1E33"/>

        <!-- 飲料列表 -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10" Background="#FFF3EBEB" Orientation="Vertical">

            <!-- 紅茶大杯 -->
            <StackPanel Orientation="Horizontal" Margin="0,5, 5, 5" Background="AliceBlue">
                <Label Content="紅茶大杯" FontSize="14" FontWeight="Bold" Width="100"
                       VerticalAlignment="Center" Margin="10,0"/>
                <Label Content="60元" FontSize="14" FontWeight="Bold" Width="100"
                       VerticalAlignment="Center" Foreground="Red" Margin="10,0"/>
                <Slider Width="120" Maximum="20" x:Name="slider1" TickPlacement="Both" IsSnapToTickEnabled="True"/>
                <Label Content="{Binding Value, ElementName=slider1}" FontWeight="Bold"/>
            </StackPanel>

            <!-- 紅茶小杯 -->
            <StackPanel Orientation="Horizontal" Margin="0,5" Background="AliceBlue">
                <Label Content="紅茶小杯" FontSize="14" FontWeight="Bold" Width="100"
                       VerticalAlignment="Center" Margin="10,0"/>
                <Label Content="40元" FontSize="14" FontWeight="Bold" Width="100"
                       VerticalAlignment="Center" Foreground="Red" Margin="10,0"/>
                <TextBox Text="0" Width="120" Height="30" FontSize="14"
                         VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Margin="10,0" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
