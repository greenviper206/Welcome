<Window x:Class="Welcome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Welcome"
        mc:Ignorable="d"
        Title="MainWindow" Height="549" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="345"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Background="#1F1E33"/>
        <StackPanel Height="34" Background="#FFF3EBEB" Margin="4,4,6,307"
              Orientation="Horizontal">
                <Label Content="紅茶大杯" FontSize="14" FontWeight="Bold" Width="100"
                    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,2,0,2" Height="30"/>
                <Label Content="60元" FontSize="14" FontWeight="Bold" Width="100"
                    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,2,0,2" Height="30"
                    Foreground="Red"/>
            <TextBox TextWrapping="Wrap" Text="0" Width="120" Margin="50,0,0,0"
                  VerticalAlignment="Center" Height="30" VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Right" FontSize="14"/>
            <StackPanel Height="34" Background="#FFF3EBEB"
              Orientation="Horizontal">
                <Label Content="紅茶小杯" FontSize="14" FontWeight="Bold" Width="100"
                    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,2,0,2" Height="30"/>
                <Label Content="40元" FontSize="14" FontWeight="Bold" Width="100"
                    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,2,0,2" Height="30"
                    Foreground="Red"/>
                <TextBox TextWrapping="Wrap" Text="0" Width="120" Margin="50,0,0,0"
                  VerticalAlignment="Center" Height="30" VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Right" FontSize="14"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
